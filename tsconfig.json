{
  "compilerOptions": {
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2021",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "declaration": true,
    "esModuleInterop": true,
    "sourceMap": false,
    "noErrorTruncation": true,
    "skipLibCheck": true,
  },
  "exclude": ["**/node_modules", "**/dist", "**/coverage"]
}
